@model UserManagementApp.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - The App</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            min-height: 100vh;
            display: flex;
            overflow: hidden;
        }

        .container {
            display: flex;
            width: 100%;
            height: 100vh;
        }

        /* Left Panel */
        .left-panel {
            flex: 1;
            display: flex;
            flex-direction: column;
            position: relative;
            background: #ffffff;
            padding: 80px;
        }

        .logo {
            position: absolute;
            top: 80px;
            left: 80px;
            font-size: 38px;
            font-weight: 800;
            letter-spacing: 10px;
            color: #2563eb;
        }

        .content-wrapper {
            display: flex;
            flex-direction: column;
            height: 100%;
            justify-content: space-between;
        }

        .form-container {
            max-width: 480px;
            width: 100%;
            margin: auto;
            padding-top: 100px;
        }

        .form-header {
            margin-bottom: 30px;
        }

        .form-subtitle {
            color: #6b7280;
            font-size: 16px;
            font-weight: 400;
            margin-bottom: 10px;
        }

        .form-title {
            color: #1f2937;
            font-size: 34px;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .form-description {
            color: #6b7280;
            font-size: 15px;
            line-height: 1.6;
        }

        .form-group {
            margin-bottom: 24px;
            position: relative;
        }

        .input-wrapper {
            position: relative;
        }

        .form-input {
            width: 100%;
            padding: 34px 50px 14px 18px;
            border: 1.5px solid #e5e7eb;
            border-radius: 8px;
            font-size: 16px;
            font-family: 'Montserrat', sans-serif;
            color: #1f2937;
            transition: all 0.3s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: #2563eb;
            box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
        }

        .form-label {
            position: absolute;
            left: 18px;
            top: 14px;
            color: #9ca3af;
            font-size: 13px;
            font-weight: 500;
            pointer-events: none;
        }

        .input-icon {
            position: absolute;
            right: 18px;
            top: 50%;
            transform: translateY(-50%);
            width: 24px;
            height: 24px;
            cursor: pointer;
        }

        .input-icon svg {
            width: 100%;
            height: 100%;
            stroke: #9ca3af;
            fill: none;
            stroke-width: 2;
            stroke-linecap: round;
            stroke-linejoin: round;
            transition: stroke 0.3s ease;
        }

        .input-icon:hover svg {
            stroke: #6b7280;
        }

        .submit-btn {
            width: 100%;
            padding: 18px;
            background: #2563eb;
            color: #ffffff;
            border: none;
            border-radius: 8px;
            font-size: 17px;
            font-weight: 600;
            font-family: 'Montserrat', sans-serif;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 14px rgba(37, 99, 235, 0.35);
            margin-bottom: 20px;
        }

        .submit-btn:hover {
            background: #1e40af;
            transform: translateY(-2px);
            box-shadow: 0 6px 18px rgba(37, 99, 235, 0.45);
        }

        /* Right Panel */
        .right-panel {
            flex: 1;
            position: relative;
            overflow: hidden;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(37, 99, 235, 0.7) 0%, rgba(30, 64, 175, 0.8) 100%);
        }

        .text-danger {
            color: #dc2626;
            font-size: 13px;
            margin-top: 6px;
            display: block;
        }

        .alert {
            padding: 14px 18px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
            font-weight: 500;
        }

        .alert-danger {
            background: #fef2f2;
            color: #dc2626;
            border: 1px solid #fecaca;
        }

        .password-requirements {
            background: #f0f9ff;
            border: 1px solid #bfdbfe;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
        }

        .password-requirements h4 {
            color: #1e40af;
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .password-requirements ul {
            margin: 0;
            padding-left: 20px;
        }

        .password-requirements li {
            color: #374151;
            font-size: 13px;
            margin-bottom: 5px;
        }

        /* Responsive */
        @@media (max-width: 1024px) {
            .right-panel {
                display: none;
            }
        }

        @@media (max-width: 640px) {
            .left-panel {
                padding: 40px 30px;
            }

            .logo {
                top: 40px;
                left: 30px;
                font-size: 28px;
            }

            .form-container {
                padding-top: 80px;
            }

            .form-title {
                font-size: 28px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="left-panel">
            <div class="logo">THE APP</div>
            
            <div class="content-wrapper">
                <div class="form-container">
                    <div class="form-header">
                        <p class="form-subtitle">Almost there</p>
                        <h1 class="form-title">Reset Your Password</h1>
                        <p class="form-description">
                            Enter your new password below. Make sure it's secure!
                        </p>
                    </div>

                    <form asp-action="ResetPassword" method="post" id="resetPasswordForm">
                        <input type="hidden" asp-for="Token" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <div class="input-wrapper">
                                <label class="form-label">New Password</label>
                                <input asp-for="NewPassword" type="password" class="form-input" id="newPasswordInput" placeholder="••••••••" />
                                <span class="input-icon" id="toggleNewPassword">
                                    <svg viewBox="0 0 24 24" id="eyeIconNew">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                        <circle cx="12" cy="12" r="3"></circle>
                                    </svg>
                                    <svg viewBox="0 0 24 24" id="eyeOffIconNew" style="display: none;">
                                        <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                                        <line x1="1" y1="1" x2="23" y2="23"></line>
                                    </svg>
                                </span>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <div class="input-wrapper">
                                <label class="form-label">Confirm New Password</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-input" id="confirmPasswordInput" placeholder="••••••••" />
                                <span class="input-icon" id="toggleConfirmPassword">
                                    <svg viewBox="0 0 24 24" id="eyeIconConfirm">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                        <circle cx="12" cy="12" r="3"></circle>
                                    </svg>
                                    <svg viewBox="0 0 24 24" id="eyeOffIconConfirm" style="display: none;">
                                        <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
                                        <line x1="1" y1="1" x2="23" y2="23"></line>
                                    </svg>
                                </span>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="submit-btn">Reset Password</button>
                    </form>
                </div>

                <div style="height: 50px;"></div>
            </div>
        </div>

        <div class="right-panel">
            <div class="overlay"></div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        // Toggle new password visibility
        document.getElementById('toggleNewPassword').addEventListener('click', function() {
            const passwordInput = document.getElementById('newPasswordInput');
            const eyeIcon = document.getElementById('eyeIconNew');
            const eyeOffIcon = document.getElementById('eyeOffIconNew');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.style.display = 'none';
                eyeOffIcon.style.display = 'block';
            } else {
                passwordInput.type = 'password';
                eyeIcon.style.display = 'block';
                eyeOffIcon.style.display = 'none';
            }
        });

        // Toggle confirm password visibility
        document.getElementById('toggleConfirmPassword').addEventListener('click', function() {
            const passwordInput = document.getElementById('confirmPasswordInput');
            const eyeIcon = document.getElementById('eyeIconConfirm');
            const eyeOffIcon = document.getElementById('eyeOffIconConfirm');
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.style.display = 'none';
                eyeOffIcon.style.display = 'block';
            } else {
                passwordInput.type = 'password';
                eyeIcon.style.display = 'block';
                eyeOffIcon.style.display = 'none';
            }
        });
    </script>
</body>
</html>