@model UserManagementApp.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - The App</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Montserrat', sans-serif;
            min-height: 100vh;
            display: flex;
            overflow: hidden;
        }

        .container {
            display: flex;
            width: 100%;
            height: 100vh;
        }

        /* Left Panel */
        .left-panel {
            flex: 1;
            display: flex;
            flex-direction: column;
            position: relative;
            background: #ffffff;
            padding: 80px;
        }

        .logo {
            position: absolute;
            top: 80px;
            left: 80px;
            font-size: 38px;
            font-weight: 800;
            letter-spacing: 10px;
            color: #2563eb;
        }

        .content-wrapper {
            display: flex;
            flex-direction: column;
            height: 100%;
            justify-content: space-between;
        }

        .form-container {
            max-width: 480px;
            width: 100%;
            margin: auto;
            padding-top: 100px;
        }

        .form-header {
            margin-bottom: 30px;
        }

        .form-subtitle {
            color: #6b7280;
            font-size: 16px;
            font-weight: 400;
            margin-bottom: 10px;
        }

        .form-title {
            color: #1f2937;
            font-size: 34px;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .form-description {
            color: #6b7280;
            font-size: 15px;
            line-height: 1.6;
        }

        .form-group {
            margin-bottom: 24px;
            position: relative;
        }

        .input-wrapper {
            position: relative;
        }

        .form-input {
            width: 100%;
            padding: 34px 50px 14px 18px;
            border: 1.5px solid #e5e7eb;
            border-radius: 8px;
            font-size: 16px;
            font-family: 'Montserrat', sans-serif;
            color: #1f2937;
            transition: all 0.3s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: #2563eb;
            box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
        }

        .form-label {
            position: absolute;
            left: 18px;
            top: 14px;
            color: #9ca3af;
            font-size: 13px;
            font-weight: 500;
            pointer-events: none;
        }

        .input-icon {
            position: absolute;
            right: 18px;
            top: 50%;
            transform: translateY(-50%);
            width: 24px;
            height: 24px;
        }

        .input-icon svg {
            width: 100%;
            height: 100%;
            stroke: #9ca3af;
            fill: none;
            stroke-width: 2;
            stroke-linecap: round;
            stroke-linejoin: round;
        }

        .submit-btn {
            width: 100%;
            padding: 18px;
            background: #2563eb;
            color: #ffffff;
            border: none;
            border-radius: 8px;
            font-size: 17px;
            font-weight: 600;
            font-family: 'Montserrat', sans-serif;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 14px rgba(37, 99, 235, 0.35);
            margin-bottom: 20px;
        }

        .submit-btn:hover {
            background: #1e40af;
            transform: translateY(-2px);
            box-shadow: 0 6px 18px rgba(37, 99, 235, 0.45);
        }

        .back-link {
            text-align: center;
            margin-top: 10px;
        }

        .back-link a {
            color: #2563eb;
            text-decoration: none;
            font-size: 15px;
            font-weight: 600;
            transition: color 0.3s ease;
        }

        .back-link a:hover {
            color: #1e40af;
        }

        /* Right Panel */
        .right-panel {
            flex: 1;
            position: relative;
            overflow: hidden;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(37, 99, 235, 0.7) 0%, rgba(30, 64, 175, 0.8) 100%);
        }

        .text-danger {
            color: #dc2626;
            font-size: 13px;
            margin-top: 6px;
            display: block;
        }

        .alert {
            padding: 14px 18px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
            font-weight: 500;
        }

        .alert-danger {
            background: #fef2f2;
            color: #dc2626;
            border: 1px solid #fecaca;
        }

        /* Responsive */
        @@media (max-width: 1024px) {
            .right-panel {
                display: none;
            }
        }

        @@media (max-width: 640px) {
            .left-panel {
                padding: 40px 30px;
            }

            .logo {
                top: 40px;
                left: 30px;
                font-size: 28px;
            }

            .form-container {
                padding-top: 80px;
            }

            .form-title {
                font-size: 28px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="left-panel">
            <div class="logo">THE APP</div>
            
            <div class="content-wrapper">
                <div class="form-container">
                    <div class="form-header">
                        <p class="form-subtitle">Password Recovery</p>
                        <h1 class="form-title">Forgot Password?</h1>
                        <p class="form-description">
                            No worries! Enter your email address and we'll send you a link to reset your password.
                        </p>
                    </div>

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <div class="input-wrapper">
                                <label class="form-label">E-mail</label>
                                <input asp-for="Email" class="form-input" placeholder="test@example.com" />
                                <span class="input-icon">
                                    <svg viewBox="0 0 24 24">
                                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                                        <polyline points="22,6 12,13 2,6"></polyline>
                                    </svg>
                                </span>
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <button type="submit" class="submit-btn">Send Reset Link</button>

                        <div class="back-link">
                            <a asp-action="Login">‚Üê Back to Login</a>
                        </div>
                    </form>
                </div>

                <div style="height: 50px;"></div>
            </div>
        </div>

        <div class="right-panel">
            <div class="overlay"></div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>